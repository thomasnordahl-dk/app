{
    "name": "ricotta/app",
    "description": "Ricotta app library",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/thomasnordahl-dk/container"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ricotta\\App\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/Support/Autoload.php"
        ],
        "psr-4": {
            "Ricotta\\App\\Tests\\": "tests/",
            "Ricotta\\App\\Demo\\": "demo/"
        }
    },
    "authors": [
        {
            "name": "Thomas Nordahl Pedersen",
            "email": "thno@fynskemedier.dk"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.4",
        "ricotta/container": "^0.1.0",
        "nyholm/psr7": "^1.8",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1",
        "nyholm/psr7-server": "^1.1",
        "httpsoft/http-emitter": "^1.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "phpstan": "phpstan analyse --level=9 src demo",
        "all": [
            "@test",
            "@phpstan"
        ]
    }
}
